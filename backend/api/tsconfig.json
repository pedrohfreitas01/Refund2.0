{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ES2023"],
    "module": "node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },

    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["node"]
  },
  "include": ["src"]
}
